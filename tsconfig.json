{
  "compilerOptions": {
    "target": "ES2023",
    "module": "esnext",
    "lib": ["dom", "es2023", "ESNext"],
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "verbatimModuleSyntax": true,

    /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
    "paths": {
      "@/*": ["src/*"],
      "@CB/*": ["src/Apps/Cookbook/*"],
      "@CM/*": ["src/Apps/CurveMonitor/*"],
      "@LAF/*": ["src/Apps/LlamaAirforce/*"],
      "@Union/*": ["src/Apps/LlamaAirforce/Pages/Union/*"],
      "@Pounders/*": ["src/Apps/LlamaAirforce/Pages/Pounders/*"]
    },

    /* Other */
    "skipLibCheck": true,
    "types": ["vite/client"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "auto-imports.d.ts",
    "components.d.ts",
    "Deploy.ts"
  ],

  "exclude": ["node_modules", "src/Apps/CurveMonitor/phil"]
}
