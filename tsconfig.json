{
  "compilerOptions": {
    "target": "ES2023",
    "module": "esnext",
    "lib": ["dom", "es2023", "ESNext"],
    "sourceMap": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUncheckedSideEffectImports": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",

    /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
    "paths": {
      "@/*": ["src/*"],
      "@CB/*": ["src/Apps/Cookbook/*"],
      "@CM/*": ["src/Apps/CurveMonitor/*"],
      "@PM/*": ["src/Apps/PrismaMonitor/*"],
      "@LAF/*": ["src/Apps/LlamaAirforce/*"],
      "@Union/*": ["src/Apps/LlamaAirforce/Pages/Union/*"],
      "@Pounders/*": ["src/Apps/LlamaAirforce/Pages/Pounders/*"]
    },

    /* Other */
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "Deploy.ts"
  ],

  "exclude": ["node_modules", "src/Apps/CurveMonitor/phil"],

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "types": ["node"]
    }
  }
}
